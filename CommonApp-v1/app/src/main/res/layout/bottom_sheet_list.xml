<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_main"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"


              android:paddingLeft="@dimen/login_m16d"
              android:paddingRight="@dimen/login_m16d"

              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select"
        android:textColor="@color/clrEtText"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="@dimen/text_18s" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clrEtHint"/>


    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clrEtHint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/login_m16d"
        android:paddingBottom="@dimen/login_m16d"
        android:visibility="gone"
        >


        <TextView
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="CANCEL"
            android:textSize="18dp"
            android:textColor="@color/tv_text_unpress_clickable"/>

        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="DONE"
            android:layout_marginLeft="@dimen/login_m16d"
            android:textSize="18dp"
            android:textColor="@color/tv_text_press_clickable" />

    </LinearLayout>

</LinearLayout>
