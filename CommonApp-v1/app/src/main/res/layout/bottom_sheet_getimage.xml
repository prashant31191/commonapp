<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_main"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="@dimen/login_m16d"
              android:paddingRight="@dimen/login_m16d">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Choose image"
        android:textColor="@color/clrEtText"
        android:textSize="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clrEtHint"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_home_ripple"
                android:drawableLeft="@drawable/ic_menu_gallery"
                android:drawablePadding="15dp"
                android:gravity="center|left"
                android:padding="15dp"
                android:text="Gallery"
                android:textColor="@color/clrEtText"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/clrEtHint"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCamera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_home_ripple"
                    android:drawableLeft="@drawable/ic_menu_camera"
                    android:drawablePadding="15dp"
                    android:gravity="center|left"
                    android:padding="15dp"
                    android:text="Camera"
                    android:textColor="@color/clrEtText"
                    android:textSize="15dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/clrEtHint"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
