<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llContainerSub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clrTheme"
    android:isScrollContainer="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        >


        <LinearLayout
            android:id="@+id/llLogin"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/screen_m_d14"
            android:paddingRight="@dimen/screen_m_d14"
            android:paddingBottom="@dimen/screen_m_d6"
            android:paddingTop="@dimen/screen_m_d6"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/screen_m_d6"
                >
                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/m_18sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/btn_txt_tr_black_brown_color"
                    android:paddingTop="@dimen/m_8dp"
                    android:paddingBottom="@dimen/m_8dp"
                    android:text="Login" />

                <TextView
                    android:id="@+id/tvRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:layout_alignParentLeft="true"
                    android:textColor="@color/clr_txt_brown"
                    android:textSize="@dimen/m_18sp"
                    android:paddingTop="@dimen/m_8dp"
                    android:paddingBottom="@dimen/m_8dp"
                    android:text="Register" />

                


            </RelativeLayout>

            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingTop="@dimen/screen_m_d56"
                android:paddingBottom="@dimen/screen_m_d56"

                android:paddingLeft="@dimen/screen_m_d14"
                android:paddingRight="@dimen/screen_m_d14"

                android:layout_weight="1"
                >


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/screen_m_d14"
                    android:paddingRight="@dimen/screen_m_d14"
                    >
                <RelativeLayout
                    android:id="@+id/rlCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="@dimen/screen_m_d14"
                    android:paddingRight="@dimen/screen_m_d14"
                    android:clickable="true"
                    >
                    <ImageView
                        android:id="@+id/ivCustomerIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_account_circle_black_48dp"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/m_16dp"

                        android:background="@drawable/round_stroke_trblack_solid_theme"
                        android:layout_margin="@dimen/m_5dp"

                        />
                    <TextView
                        android:id="@+id/tvCustomer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivCustomerIcon"
                        android:layout_centerHorizontal="true"
                        android:text="Customer"
                        android:textSize="@dimen/m_16sp"
                        android:textColor="@color/btn_txt_tr_black_brown_color"
                        />

                </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="@dimen/screen_m_d14"
                    android:paddingRight="@dimen/screen_m_d14"
                    >
                <RelativeLayout
                    android:id="@+id/rlTradie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="@dimen/screen_m_d14"
                    android:paddingRight="@dimen/screen_m_d14"
                    android:clickable="true"
                    >

                    <ImageView
                        android:id="@+id/ivTradieIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_business_center_black_48dp"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/m_16dp"

                        android:background="@drawable/round_stroke_trblack_solid_theme"
                        android:layout_margin="@dimen/m_5dp"
                        />
                    <TextView
                        android:id="@+id/tvTradie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivTradieIcon"
                        android:layout_centerHorizontal="true"
                        android:text="Tradie"
                        android:textSize="@dimen/m_16sp"
                        android:textColor="@color/btn_txt_tr_black_brown_color"
                        />

                </RelativeLayout>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>
</LinearLayout>