<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/clr_d_title</item>
        <item name="android:textSize">30dp</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name=".RoundedImageView">
       <!-- <attr name="borderColor" format="color|reference" />
        <attr name="borderWidth" format="dimension|reference" />
        <attr name="roundWidth" format="dimension|reference" />-->
    </declare-styleable>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:dividerPadding">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/tab_txt_color</item>
        <item name="android:divider">@android:color/black</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@color/tab_txt_color</item>
    </style>


    <style name="NavigationViewStyle">
        <item name="android:textSize">20sp</item> <!-- menu item text size-->
        <item name="android:textColor">@color/red</item>
        <item name="android:listPreferredItemHeightSmall">60dp</item><!-- menu item height-->


    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">400dp</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">

        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <style name="CustomRatingBarBig" parent="@android:style/Widget.RatingBar">

        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <style name="CusDialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

